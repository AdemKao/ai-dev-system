{
  "name": "react-typescript",
  "description": "React + TypeScript + Vite stack",
  "version": "1.1.0",
  "dependencies": {
    "runtime": [
      "react",
      "react-dom",
      "react-router-dom",
      "@tanstack/react-query",
      "zustand",
      "react-hook-form",
      "@hookform/resolvers",
      "zod"
    ],
    "ui": [
      "tailwindcss",
      "@radix-ui/react-*",
      "class-variance-authority",
      "clsx",
      "tailwind-merge",
      "lucide-react"
    ],
    "dev": [
      "typescript",
      "vite",
      "@vitejs/plugin-react",
      "vitest",
      "@testing-library/react",
      "@testing-library/user-event",
      "playwright",
      "msw"
    ]
  },
  "architectures": {
    "default": "feature-based",
    "options": {
      "feature-based": {
        "description": "Simple feature-based structure for small-medium apps",
        "doc": "architectures/feature-based.md",
        "structure": {
          "src/app": "App setup, routes, providers",
          "src/features": "Feature modules (vertical slices)",
          "src/shared": "Shared components, hooks, utils",
          "src/services": "External service integrations",
          "src/types": "Global TypeScript types"
        }
      },
      "fsd": {
        "description": "Feature-Sliced Design for large-scale apps",
        "doc": "architectures/fsd.md",
        "structure": {
          "src/app": "App initialization, providers, routing",
          "src/pages": "Full page compositions",
          "src/widgets": "Large self-contained UI blocks",
          "src/features": "User interactions and actions",
          "src/entities": "Business domain entities",
          "src/shared": "Reusable foundation (UI kit, utils)"
        },
        "segments": ["ui", "model", "api", "lib", "config"]
      }
    }
  },
  "conventions": {
    "components": "PascalCase, .tsx extension",
    "hooks": "camelCase with use prefix, .ts extension",
    "utils": "camelCase, .ts extension",
    "tests": ".test.ts or .test.tsx, colocated with source",
    "styles": "Tailwind CSS, cn() helper for conditional classes",
    "slices": "kebab-case for directories"
  },
  "patterns": [
    "Functional components only",
    "Custom hooks for reusable logic",
    "React Query for server state",
    "Zustand for client state",
    "React Hook Form + Zod for forms",
    "Path aliases (@/)",
    "Public API via index.ts exports"
  ]
}
